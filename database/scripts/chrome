#!/bin/bash
cd ./database/scripts/
cp $3/chrome_100_percent.pak /tmp/chrome_100_percent_old.pak
node ./node-chrome-pak.js unpack /tmp/chrome_100_percent_old.pak

if [[ $1 == *.svg ]]; then
    python3 svg2png.py $1 /tmp/extracted/$2
else
    cp $1 /tmp/extracted/$2
fi

node ./node-chrome-pak.js pack /tmp//extracted /tmp/chrome_100_percent_old.pak
cp /tmp/chrome_100_percent_old.pak $3/chrome_100_percent.pak
rm -f chrome_100_percent_old.pak
rm -rf extracted